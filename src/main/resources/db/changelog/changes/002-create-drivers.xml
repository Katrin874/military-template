<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-drivers" author="cadet">
        <createTable tableName="drivers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="military_id" type="VARCHAR(20)">
                <constraints unique="true"/>
            </column>

            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(50)"/>

            <column name="rank" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="license_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="category" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>

            <column name="license_categories" type="VARCHAR(50)"/>

            <column name="license_expiry_date" type="DATE"/>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>